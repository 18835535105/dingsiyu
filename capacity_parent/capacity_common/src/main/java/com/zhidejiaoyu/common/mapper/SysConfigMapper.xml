<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhidejiaoyu.common.mapper.SysConfigMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zhidejiaoyu.common.pojo.SysConfig">
        <id column="id" property="id"/>
        <result column="content" property="content"/>
        <result column="explain" property="explain"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="base_sql">
        id,content,`explain`,update_time
    </sql>

    <select id="selectByExplain" resultMap="BaseResultMap" parameterType="map">
        select
        <include refid="base_sql"></include>
        from sys_config
        where
        `explain` like concat('%',concat(#{explain},'%'))
    </select>

</mapper>
