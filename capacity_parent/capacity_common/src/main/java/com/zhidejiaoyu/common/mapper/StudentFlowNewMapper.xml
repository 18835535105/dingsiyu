<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhidejiaoyu.common.mapper.StudentFlowNewMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zhidejiaoyu.common.pojo.StudentFlowNew">
        <id column="id" property="id"/>
        <result column="student_id" property="studentId"/>
        <result column="current_flow_id" property="currentFlowId"/>
        <result column="unit_id" property="unitId"/>
        <result column="type" property="type"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    <sql id="base_sql">
        id, student_id, current_flow_id, unit_id, type, update_time
    </sql>
    <select id="selectByStudentIdAndUnitId" resultMap="BaseResultMap" parameterType="map">
        select
        <include refid="base_sql"/>
        from student_flow_new
        where student_id = #{studentId}
        and unit_id = #{unitId}
        and type = 1
        limit 1
    </select>

</mapper>
